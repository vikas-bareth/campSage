<% layout('layouts/boilerplate')%>
<div class="d-flex justify-content-center">
    <div class="card" style="width: 20rem;">
        <img src="https://images.unsplash.com/photo-1563299796-17596ed6b017?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="...">
        <div class="card-title m-2">
            <h2 class="h2">Login</h2>
        </div>
        <div class="card-body">
            <form action="/login" method="post" class="needs-validation mb-3" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a username
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="email" name="password" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a Password
                    </div>
                </div>
                <button class="btn btn-primary w-100 mt-3">Login</button>
                
            </form>
        </div>
      </div>
</div>